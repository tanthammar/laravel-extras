{
    "name": "tanthammar/laravel-extras",
    "description": "Custom validation rules for the Laravel Framework",
    "keywords": [
        "tanthammar",
        "laravel",
        "validation",
        "rules"
    ],
    "homepage": "https://github.com/tanthammar/laravel-extras",
    "license": "MIT",
    "authors": [
        {
            "name": "Tina Hammar",
            "email": "tinahammar@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3|^8.4",
        "laravel/framework": "^11.0|^12.0",
        "spatie/laravel-package-tools": "^1.9.2"
    },
    "autoload": {
        "psr-4": {
            "TantHammar\\LaravelExtras\\": "src"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "TantHammar\\LaravelExtras\\LaravelExtrasServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
